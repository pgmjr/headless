# =====================================================
# ===============  PROJECT & GLOBAL ===================
# =====================================================
PROJECT_NAME=BrickMods
PROJECT_ENV=local
COMPOSE_PROJECT_NAME=brickmods
NODE_VERSION=24
PHP_VERSION=8.2

# General storage paths
STORAGE_PATH=./storage
LOGS_PATH=./storage/logs
CACHE_PATH=./storage/cache
TMP_PATH=./storage/tmp
UPLOADS_PATH=./storage/uploads

# =====================================================
# ===============  FRONTEND (Next.js / React) =========
# =====================================================
FRONTEND_PROTOCOL=http
FRONTEND_HOSTNAME=localhost
FRONTEND_PORT=3000
FRONTEND_URL=${FRONTEND_PROTOCOL}://${FRONTEND_HOSTNAME}
FRONTEND_CORS_ALLOWED_ORIGINS=${FRONTEND_URL}

NEXT_PUBLIC_SITE_NAME=${PROJECT_NAME}
NEXT_PUBLIC_BASE_URL=${FRONTEND_URL}

# Frontend build/output
FRONTEND_BUILD_DIR=.next
FRONTEND_EXPORT_DIR=out
FRONTEND_LOGS_DIR=${LOGS_PATH}/frontend

# Auth endpoints
NEXT_PUBLIC_API_URL=${BACKEND_URL}/api
NEXT_PUBLIC_SANCTUM_CSRF_COOKIE=${BACKEND_URL}/sanctum/csrf-cookie
NEXT_PUBLIC_JWT_LOGIN_ENDPOINT=${BACKEND_URL}/api/login
NEXT_PUBLIC_JWT_REGISTER_ENDPOINT=${BACKEND_URL}/api/register

# 3rd Party Services
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Feature Flags
ENABLE_PREVIEW=true
NEXT_PUBLIC_ENABLE_PREVIEW=${ENABLE_PREVIEW}
FEATURE_FLAG=beta-feature
NEXT_PUBLIC_FEATURE_FLAG=${FEATURE_FLAG}

# i18n
I18N_DEFAULT_LOCALE=en
I18N_SUPPORTED_LOCALES=en,fr,de
I18N_LOCALE_PATH=/locales
NEXT_PUBLIC_I18N_DEFAULT_LOCALE=${I18N_DEFAULT_LOCALE}
NEXT_PUBLIC_I18N_SUPPORTED_LOCALES=${I18N_SUPPORTED_LOCALES}
NEXT_PUBLIC_I18N_LOCALE_PATH=${I18N_LOCALE_PATH}

# =====================================================
# ===============  BACKEND (Laravel) =================
# =====================================================
BACKEND_PROTOCOL=http
BACKEND_HOSTNAME=api.localhost
BACKEND_PORT=8000
BACKEND_URL=http://api.localhost
BACKEND_DEBUG=true

APP_NAME=BrickMods
APP_ENV=local
APP_KEY=base64:M4tKuo8OdfvqSgTe/23vAS8HL3QRs3CTUtlhEWgTuB8=
APP_DEBUG=true
APP_URL=http://api.localhost

# Laravel paths
LARAVEL_STORAGE_PATH=${STORAGE_PATH}/laravel
LARAVEL_LOGS_PATH=${LARAVEL_STORAGE_PATH}/logs
LARAVEL_CACHE_PATH=${LARAVEL_STORAGE_PATH}/cache
LARAVEL_UPLOADS_PATH=${UPLOADS_PATH}/laravel

# JWT
JWT_SECRET_KEY=your-jwt-secret
JWT_SECRET=${JWT_SECRET_KEY}
JWT_TTL=60
JWT_REFRESH_TTL=20160

# Sanctum
SESSION_DOMAIN=${FRONTEND_HOSTNAME}
SANCTUM_STATEFUL_DOMAINS=${FRONTEND_HOSTNAME}:${FRONTEND_PORT}
SANCTUM_CSRF_COOKIE_NAME=XSRF-TOKEN

# API Tokens
API_RATE_LIMIT=60
API_TOKEN_NAME=api_token
API_SECRET_KEY=${API_TOKEN_NAME}

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=no-reply@${FRONTEND_HOSTNAME}
MAIL_FROM_NAME="${APP_NAME}"

# =====================================================
# ===============  CMS (WordPress) ===================
# =====================================================
WORDPRESS_PROTOCOL=http
WORDPRESS_HOSTNAME=admin.${FRONTEND_HOSTNAME}
WORDPRESS_PORT=8080
WORDPRESS_URL=${WORDPRESS_PROTOCOL}://${WORDPRESS_HOSTNAME}
WORDPRESS_API_URL=${WORDPRESS_URL}/wp-json
WORDPRESS_GRAPHQL_ENDPOINT=${WORDPRESS_URL}/graphql
NEXT_PUBLIC_WORDPRESS_API_URL=${WORDPRESS_API_URL}
NEXT_PUBLIC_WORDPRESS_GRAPHQL_ENDPOINT=${WORDPRESS_GRAPHQL_ENDPOINT}
NEXT_PUBLIC_WORDPRESS_URL=${WORDPRESS_URL}
NEXT_PUBLIC_WORDPRESS_PREVIEW_SECRET=${WORDPRESS_PREVIEW_SECRET}
WORDPRESS_PREVIEW_SECRET=super-secret-preview

# WordPress Application Password / Auth
WORDPRESS_APPLICATION_PASSWORD=your-wp-application-password
WORDPRESS_AUTH_TOKEN=${WORDPRESS_APPLICATION_PASSWORD}
WORDPRESS_APP_PASSWORD=${WORDPRESS_APPLICATION_PASSWORD}
WORDPRESS_JWT_ENDPOINT=${WORDPRESS_URL}/wp-json/jwt-auth/v1/token
WORDPRESS_JWT_SECRET=your-wp-jwt-secret

# WordPress paths
WORDPRESS_UPLOADS_PATH=${UPLOADS_PATH}/wordpress
WORDPRESS_LOGS_PATH=${LOGS_PATH}/wordpress
WORDPRESS_THEMES_PATH=wp-content/themes
WORDPRESS_PLUGINS_PATH=wp-content/plugins

# =====================================================
# ===============  DATABASE (Shared MySQL) ============
# =====================================================
# Laravel database (manually created)
DB_CONNECTION=mysql
DB_HOST=host.docker.internal
DB_PORT=3306
DB_DATABASE=api
DB_USERNAME=admin
DB_PASSWORD=pass1234

# =====================================================
# ===============  REDIS  ============================
# =====================================================
DOCKER_REDIS_HOST=redis
REDIS_HOST=${DOCKER_REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_DB=0

# =====================================================
# ===============  DOCKER CONFIG  ====================
# =====================================================
DOCKER_PHPMYADMIN_HOST=phpmyadmin
LARAVEL_PORT=8000
FRONTEND_PORT=3000
WORDPRESS_PORT=8080
